<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8bW92aWV8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60);">
  <div class="container text-center">
    <h1><strong><%= @list.name %></strong>  </h1>
  </div>
</div>
<div class="container d-flex align-items-center flex-column mt-4">
  <div class="m-3" >
    <div class="d-flex align-items-center flex-column ">

      <button class="btn btn-success">Add Movie</button>
    </div>
    <div  class="original-movies">
      <% @movies.each do |movie| %>
        <%= image_tag  movie.poster_url , alt: "text" , class: "movie-img" %>
      <% end %>
      <!-- Top Rated Movies List Here -->
    </div>
  </div>
  <div class="cards">
    <% @my_list_movies.each do |movie| %>
      <div class="card-category">
        <div class="card-trip bg-dark">
          <%= image_tag movie.poster_url, alt: "text" %>
          <div class="d-flex flex-column card-trip-infos  ">
            <div class="flex-grow-1">
              <h2 class="mb-2"><%= movie.title %>  <%= movie.rating %><i class="fa-solid fa-star star-color m-1"></i></h2>
              <p><%= movie.overview %></p>
            </div>
            <div class="d-flex mt-2 justify-content-between">
              <div class="mb- flex-grow-1">
                <% movie.bookmarks.each do |movie| %>
                  <h6 >
                    <%= link_to bookmark_path(movie),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                    <i class="fa-solid fa-comment"></i> <%= movie.comment %></h6>
                <% end %>
              </div>
              <h2 class="card-trip-pricing m-1">
                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                  <i class="fa-solid fa-circle-plus green"></i>
                </button>
                <%# <%= link_to new_list_bookmark_path(@list) do %>
                  <%# <% end %>
                </h2>
              </div>
              <i class="fa-solid fa-trash card-trip-user"></i>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal fade modal-body" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%# <%= render 'bookmarks/form' %> %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </div>
