<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container text-center">
    <h1><strong><%= @list.name %></strong>  </h1>
  </div>
</div>
<div class="container d-flex align-items-center flex-column mt-4">
  <div class="m-3" >
    <button class="btn btn-success">Add Movie</button>
  </div>
  <div class="cards">
    <% @my_list_movies.each do |movie| %>
      <div class="card-category">
        <div class="card-trip bg-dark">
          <%= image_tag movie.poster_url, alt: "text" %>
          <div class="d-flex flex-column card-trip-infos  ">
            <div class="flex-grow-1">
              <h2 class="mb-2"><%= movie.title %>  <%= movie.rating %><i class="fa-solid fa-star star-color m-1"></i></h2>
              <p><%= movie.overview %></p>
            </div>
            <div class="d-flex justify-content-between">
              <h5 class="mb-0 flex-grow-1"><i class="fa-solid fa-comment"></i> <%= movie.bookmarks[0].comment %></h5>
              <%= link_to new_list_bookmark_path(@list) do %>
                <h2 class="card-trip-pricing"><i class="fa-solid fa-circle-plus"></i></h2>
              <% end %>
            </div>
            <i class="fa-solid fa-trash card-trip-user"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
